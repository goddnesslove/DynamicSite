<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lovech.dynamicsite.mapper.UserMapper">

    <select id="getUser" resultType="com.lovech.dynamicsite.entity.User">
       select * from users where id =#{userId}
    </select>

    <select id="getUserByName" resultType="com.lovech.dynamicsite.entity.User">
        select * from users where name =#{userId}
    </select>
</mapper>